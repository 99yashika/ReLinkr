<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Edit_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/halfback"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="131dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="50px"
                    app:srcCompat="@drawable/user_logo"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="49dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:text=""
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Experience"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_gravity="center"

            android:layout_marginTop="5dp"
            android:background="@drawable/profile_bg"
            android:text="+ Add Experience"
            android:onClick="addexperience"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Education"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_bg"
            android:text="+ Add Education"
            android:onClick="addeducation"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Skills"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_bg"
            android:text="+ Add Skills"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Achievements"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_bg"
            android:text="+ Add Achievements"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>